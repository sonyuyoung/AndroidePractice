<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity">


    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nexonbold"
        android:text="Sign Up"
        android:textColor="@color/design_default_color_primary"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.184" />

    <EditText
        android:id="@+id/wtId"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginBottom="448dp"
        android:hint="아이디를 입력하기."
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/wtPwdText"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="비밀번호를 입력해주세요."


        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/wtPwd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wtId"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/wtIdText"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="아이디를 입력해주세요."
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/wtId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toStartOf="parent" />
    <EditText
        android:id="@+id/wtPwd"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginBottom="316dp"
        android:hint="비밀번호 입력하기."
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/wtEmailText"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="이메일을 입력해주세요."
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/wtEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wtPwd"
        app:layout_constraintVertical_bias="0.046" />

    <EditText
        android:id="@+id/wtEmail"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:hint="이메일을 입력하기."
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/join"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wtEmailText"
        app:layout_constraintVertical_bias="0.424" />
>

    <Button
        android:id="@+id/join"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginBottom="88dp"
        android:backgroundTint="@color/design_default_color_primary"
        android:fontFamily="@font/nexonlight"
        android:text="Join"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
